//      ********* Remove duplicate elements from sorted Array  ********
// https://practice.geeksforgeeks.org/problems/remove-duplicate-elements-from-sorted-array/1#

// time complexity o(n). method ::: stack :::


#include<stack>
class Solution{
public:
    int remove_duplicate(int a[],int n){
        // code here
        stack<int> st1,st2;
        st1.push(a[0]);
        for(int i=1;i<n;i++)
        {
            if(a[i]!=st1.top())
            {
                st1.push(a[i]);
            }
        }
        while(!st1.empty())
        {
            st2.push(st1.top());
            st1.pop();
            
        }
        int x=0;
        while(!st2.empty())
        {
          a[x]=st2.top();
          st2.pop();
          x++;
        }
      return x;  
    }
};
